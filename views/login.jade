extends layout

block content
  .container
    .row

      .col.s12.m6
        h3.center Login
        br
        form(role='form', action="/login",method="post" )
          .input-field
              input.white-text(type='text', name="username", placeholder='Enter Email', value="")
          .input-field
            input.white-text(type='password', name="password", placeholder='Password', value="")
          button.btn.grey.darken-4(type='submit') Login

      .col.s12.m6
        h3.center Signup
        br
        form(role='form', action="/register",method="post" )
          .input-field
            input.white-text(type='text', name="username", placeholder='Enter Email', value="")
          .input-field
            input.white-text(type='text', name="phone", placeholder='Enter Phone Number', value="")
          .input-field
            input.white-text(type='password', name="password", placeholder='Password', value="")

          br
          button.btn.grey.darken-4(type='submit') Signup
