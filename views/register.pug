extends layout

block content
  .container
    h1 Register Page
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control.white-text(type='text', name="lastname", placeholder='Enter your last name')
      .form-group
        input.form-control.white-text(type='text', name="firstname", placeholder='Enter your first name')
      .form-group
          input.form-control.white-text(type='password', name="password", placeholder='Enter a password')
      .form-group
          input.form-control.white-text(type='text', name="department", placeholder='Enter your department')
      .form-group
          input.form-control.white-text(type='text', name="phone", placeholder='Enter your phone number')
      .form-group
          input.form-control.white-text(type='text', name="email", placeholder='Enter your email address')

      button.btn.grey(type='submit') Submit
     